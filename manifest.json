{
    "name": "HyperFocus",
    "description": "Focus better on your work with the help of this extension",
    "version": "1.0",
    "manifest_version": 3,

    "permissions": [ 
        "tabs",
        "activeTab",
        "storage",
        "scripting"
     ],
     "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/16.png",
            "48": "/images/48.png",
            "128": "/images/128.png"
        }
     },
    
    "icons": {
        "16": "/images/16.png",
        "48": "/images/48.png",
        "128": "/images/128.png"
    },
    
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
        }
    ]
}